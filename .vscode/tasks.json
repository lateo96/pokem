{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "cmd"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "/c",
                "make"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "cmd"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "/c",
                "\"make run\""
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "cmd"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "/c",
                "\"make clean\""
            ]
        }
    ]
}